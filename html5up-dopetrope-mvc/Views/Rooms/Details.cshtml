@using html5up_dopetrope_mvc
@model html5up_dopetrope_mvc.ViewModels.RoomInfoViewModel

@{
    ViewBag.Title = "房型介紹 - " + Model.Room.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Main Wrapper -->
<div id="main-wrapper">
    <div class="container">
        <div class="row">
            <div class="12u">

                <!-- Blog -->
                <section>
                    <header class="major">
                        <h2>@ViewBag.Title</h2>
                    </header>
                    <div>
                        <div class="row">
                            <div class="6u">
                                <section class="box">
                                    @*<header>
                                        <h3>@Model.Room.Name</h3>
                                        <span class="byline">Posted 45 minutes ago</span>
                                    </header>*@
                                    <ul class="contact">
                                        <li>
                                            <h3>特色</h3>
                                            <p>@Html.Raw(Model.Room.Features)</p>
                                        </li>
                                        <li>
                                            <h3>坪數</h3>
                                            <p>@Html.Raw(Model.Room.SquareFootage)坪</p>
                                        </li>
                                        <li>
                                            <h3>最大容許人數</h3>
                                            <p>@Html.Raw(Model.Room.MaxCapacity)</p>
                                        </li>
                                        <li>
                                            <h3>設施</h3>
                                            <p>@Html.Raw(Model.Room.Facility)</p>
                                        </li>
                                        <li>
                                            <h3>是否可加床</h3>
                                            <p>@Html.CheckBox("ExtraBed", Model.Room.ExtraBed >= 1 ? true : false) 每加一床：@Html.Raw(Model.RoomCharge.ExtraBedCharge.ToString("C0"))</p>
                                        </li>
                                        <li>
                                            <h3>淡季平日住宿金額</h3>
                                            <p>@Html.Raw(Model.RoomCharge.LowSeasonWeekday.ToString("C0"))</p>
                                        </li>
                                        <li>
                                            <h3>淡季假日住宿金額</h3>
                                            <p>@Html.Raw(Model.RoomCharge.LowSeasonHoliday.ToString("C0"))</p>
                                        </li>
                                        <li>
                                            <h3>旺季平日住宿金額</h3>
                                            <p>@Html.Raw(Model.RoomCharge.HighSeasonWeekday.ToString("C0"))</p>
                                        </li>
                                        <li>
                                            <h3>旺季假日住宿金額</h3>
                                            <p>@Html.Raw(Model.RoomCharge.HighSeasonHoliday.ToString("C0"))</p>
                                        </li>
                                    </ul>
                                    @*<p>Lorem ipsum dolor sit amet sit veroeros sed et blandit consequat sed veroeros lorem et blandit  adipiscing feugiat phasellus tempus hendrerit, tortor vitae mattis tempor, sapien sem feugiat sapien, id suscipit magna felis nec elit. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos lorem ipsum dolor sit amet.</p>*@
                                    <footer class="actions">
                                        <a href="@Url.Action("Booking", "Rooms")" class="button fa fa-file-text">立即前往訂房</a>
                                        <a href="@Url.Action("Introduction", "Rooms")" class="button alt fa fa-comment">瀏覽其他房型</a>
                                    </footer>
                                </section>
                            </div>
                            <div class="6u">
                                <section class="box">
                                 
                                    <div  >
                                        <header>
                                            <h3>房型照片</h3>
                                            @*<span class="byline">Posted 45 minutes ago</span>*@
                                        </header>
                                        @{
                                            var targetDirectory = Server.MapPath(@"~/UploadFiles/TB_Room/" + Model.Room.ID + "/");
                                            var images = Html.GetImgTagsByRoomId(@"~/UploadFiles/TB_Room/" + Model.Room.ID + "/", targetDirectory);
                                            <ul class="rslides">
                                                @foreach (var img in images)
                                                {
                                                    <li class="">
                                                        @img
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </div>
                                </section>
                            </div>
                        </div>

                    </div>
                </section>


            </div>
        </div>


    </div>
</div>


@section Style
{
    <link href="http://responsiveslides.com/responsiveslides.css" rel="stylesheet" />
}

@section Scripts
{
    <script src="http://responsiveslides.com/responsiveslides.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $(".rslides").responsiveSlides(
            {
                auto: true,             // Boolean: Animate automatically, true or false
                speed: 500,            // Integer: Speed of the transition, in milliseconds
                timeout: 4000,          // Integer: Time between slide transitions, in milliseconds
                pager: false,           // Boolean: Show pager, true or false
                nav: false,             // Boolean: Show navigation, true or false
                random: false,          // Boolean: Randomize the order of the slides, true or false
                pause: false,           // Boolean: Pause on hover, true or false
                pauseControls: true,    // Boolean: Pause when hovering controls, true or false
                prevText: "Previous",   // String: Text for the "previous" button
                nextText: "Next",       // String: Text for the "next" button
                maxwidth: "",           // Integer: Max-width of the slideshow, in pixels
                navContainer: "",       // Selector: Where controls should be appended to, default is after the 'ul'
                manualControls: "",     // Selector: Declare custom pager navigation
                namespace: "rslides",   // String: Change the default namespace used
                before: function () { },   // Function: Before callback
                after: function () { }     // Function: After callback
            });
        });
    </script>
}
