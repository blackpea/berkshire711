@using System.Globalization
@model  IOrderedQueryable< html5up_dopetrope_mvc.Models.TB_News>

@{
    ViewBag.Title = "最新消息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main Wrapper -->
<div id="main-wrapper">
    <div class="container">
        <div class="row">
            <div class="12u">
                <!-- Blog -->
                <section>
                    <header class="major">
                        <h2>@ViewBag.Title</h2>
                    </header>
                    <div>
                        <div class="row">
                            <div class="6u">
                                <section class="box">
                                    <ul class="dates">
                                        @foreach (var news in Model)
                                        {
                                            <li>
                                                <span class="date">@news.PostDateTime.ToString("MM", new CultureInfo("en-US"))<strong>@news.PostDateTime.ToString("dd", new CultureInfo("en-US"))</strong></span>
                                                <h3><a href="#">@news.Title</a></h3>
                                                <pre>@news.Description</pre>
                                            </li>

                                        }
                                    </ul>
