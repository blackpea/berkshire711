@using PagedList.Mvc
@model PagedList.IPagedList<html5up_dopetrope_mvc.Models.TB_RoomBookingOrder>

@{
    ViewBag.Title = "訂房單據管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="main-wrapper">
    <div class="container">
 
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewBag.Title</h3>
            </div>

            <div class="panel-body">

                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().OrderDateForm)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().OrderDateTo)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().CreateDateTime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().RoomNum)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().AdultNum)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().ChildNum)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().CustomeName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().CustomeEmail)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().CustomeSex)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().CustomeTel)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().TotalAmount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().OrderNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().IsComplete)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().TB_Room.Name)
                            </th>

                            <th>功能</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderDateForm)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderDateTo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoomNum)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdultNum)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ChildNum)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomeEmail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomeSex)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomeTel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsComplete)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TB_Room.Name)
                                </td>

                                <td>
                                    @Html.ActionLink("編輯", "Edit", new { id = item.ID }) |

                                    @Html.ActionLink("刪除", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <form action="@Url.Action("Create", "TB_RoomBookingOrder", new { @class = "", area = "Admin" })" method="GET">
                            <button type="submit" class="btn btn-default">新增</button>
                        </form>
                    </tfoot>
                </table>
            </div>
            <div class="panel-footer">
                @Html.PagedListPager(Model, page => Url.Action("Index", "TB_RoomBookingOrder", new { page = page, area = "Admin" }))
            </div>
        </div>

        

     
    </div>
</div>
@section Style
{
    <link href="~/Content/bootstrap.spacelab.min.css" rel="stylesheet" />
}

@section Scripts
{

}